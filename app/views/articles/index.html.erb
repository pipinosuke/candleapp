<div class="main">

</div>
<table>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.content %></td>
        <td><%= link_to image_tag("#{article.image.thumb.url}"),article %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="side-bar">
  <%= render 'articles/recommended' %>
</div>
