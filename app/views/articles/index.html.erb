<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.content %></td>
        <td><%= link_to image_tag("#{article.image.thumb.url}"),article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'articles/recommended' %>
