<div class="devise-form-top">
  <h2>プロフィール編集</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <table>
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, size: 50  %></td>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </tr>
      <tr>
        <th><%= f.label :username, "ユーザーネーム" %></th>
        <td><%= f.text_field :username, autocomplete: "off", size: 50  %></td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password, autocomplete: "off", size: 50  %></td>
      </tr>
      <tr>
        <th><%= f.label :password_confirmation, "パスワード確認" %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "off", size: 50  %></td>
      </tr>
      <tr>
        <th><%= f.label :current_password, "現在のパスワード" %></th>
        <td><%= f.password_field :current_password, autocomplete: "off", size: 50  %></td>
      </tr>
    </table>
    <div class="devise-form-submit">
      <%= f.submit "プロフィール変更" %>
      <%= button_to "アカウント削除", registration_path(resource_name),
      data: {confirm: "本当に削除しますか？"}, method: :delete %>
    </div>
  <% end %>
</div>
