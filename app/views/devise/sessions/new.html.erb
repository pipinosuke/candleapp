<div class="devise-login-form">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table>
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, size: 50 %></td>
      </tr>
      <% if devise_mapping.rememberable? -%>
        <tr>
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "off", size: 50 %></td>
        </tr>
      <% end -%>
    </table>
    <div class="devise-login-submit">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>
